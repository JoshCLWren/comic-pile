# Database
DATABASE_URL=postgresql+asyncpg://comicpile:comicpile_password@localhost:5434/comicpile
TEST_DATABASE_URL=postgresql+asyncpg://comicpile:comicpile_password@localhost:5435/comicpile_test

# Application
ENVIRONMENT=development
LOG_LEVEL=info

# Security (generate strong secrets for production)
SECRET_KEY=your-secret-key-here

# Optional: CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Automatic backups on server startup
AUTO_BACKUP_ENABLED=true
BACKUP_DIR=backups
MAX_BACKUPS=10
SKIP_IF_UNCHANGED=true

# GitHub Integration (for Ralph Orchestrator)
# GITHUB_TOKEN: Your Personal Access Token with 'repo' scope
# Generate at: https://github.com/settings/tokens/new
GITHUB_TOKEN=
GITHUB_REPO=JoshCLWren/comic-pile